name: SmartFlow Rules CI
on:
  pull_request:
    branches: [ "main" ]
jobs:
  rules:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: '3.x'
      - name: Check SmartFlow rules & PR body
        run: python .github/scripts/sfs-rules-check.py
