{
  "name": "smartflow-store-api",
  "version": "0.1.0",
  "description": "Smartflow Store MVP API",
  "main": "server.js",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "echo 'build complete' && exit 0",
    "test": "echo 'no tests configured' && exit 0",
    "migrate": "prisma migrate dev --name init",
    "studio": "prisma studio",
    "images:square": "bash sfs-tools.sh square --channel ig --kind post",
    "images:story": "bash sfs-tools.sh story --channel ig --kind story --guides",
    "images:wm:text": "bash sfs-tools.sh wm-text \"Glass Circuit\" --pos southeast --size 72 --opacity 0.22 --dst out/wm",
    "images:wm:logo": "bash sfs-tools.sh wm-logo assets/brand/logo.png --pos northeast --scale 220 --logo-opacity 0.8 --dst out/wm",
    "git:cherry": "bash sfs-tools.sh git-cherry",
    "images:wm:circuit": "bash sfs-tools.sh wm-circuit --tint '#00FFD1' --opacity 0.18 --blend screen --panels --panel-width 12 --panel-opacity 0.14 --dst out/wm",
    "images:story:tt": "bash sfs-tools.sh story --channel tiktok --kind story --guides",
    "images:square:fb": "bash sfs-tools.sh square --channel facebook --kind post",
    "images:export": "bash sfs-tools.sh export --src out --name sfs-assets --dist dist",
    "images:test": "bash scripts/sfs-nightly-check.sh",
    "images:check": "bash scripts/sfs-nightly-check.sh",
    "images:smoke": "bash scripts/sfs-smoke.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^16.12.0"
  },
  "devDependencies": {
    "prisma": "^5.22.0"
  },
  "engines": {
    "node": ">=18"
  }
}
