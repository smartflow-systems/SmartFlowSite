{
  "name": "smartflow-store-api",
  "version": "0.1.0",
  "description": "Smartflow Store MVP API",
  "main": "server.js",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "echo 'build complete' && exit 0",
    "test": "echo 'no tests configured' && exit 0",
    "migrate": "prisma migrate dev --name init",
    "studio": "prisma studio",
    "dev:5100": "PORT=5100 node server.js",
    "sync": "bash scripts/auto-sync.sh",
    "pull": "git pull --no-edit",
    "push": "git push",
    "auto-commit": "git add . && git commit -m 'chore: auto-commit [Auto-Sync]' || true",
    "sync-all": "npm run auto-commit && npm run sync"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^16.12.0"
  },
  "devDependencies": {
    "prisma": "^5.22.0"
  },
  "engines": {
    "node": ">=18"
  }
}
