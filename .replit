run = "PORT=${PORT:-5000} node server.js"

modules = ["nodejs-20"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "SmartFlowSite"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "SFS Smoke"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
curl -fsS -o /dev/null -w 'HEALTH:%{http_code}
' http://127.0.0.1:$PORT/health && echo '---' && curl -fsS http://127.0.0.1:$PORT/api/boost | head -c 300 && echo && curl -fsS -o /dev/null -w 'TRAVERSAL:%{http_code}
' http://127.0.0.1:$PORT/data/../app.py"""

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SmartFlowSite Server"

[[workflows.workflow]]
name = "SmartFlowSite Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["node", "server.js"]
build = ["bash", "-c", "npm ci --include=dev && npm run build"]

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
